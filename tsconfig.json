{
  "compilerOptions": {
   
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@repository/*": [
        "repository/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@sass/*": [
        "sass/*"
      ],
      "@enums/*": [
        "enums/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
